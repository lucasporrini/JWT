<!-- protected.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
</head>
<body>
    <div>
        <a href="/protected/">Users</a>
        <a href="/auth/logout">Logout</a>
    </div>
    <h1>Edit Profile</h1>
    <form action="/protected/edit-profile" method="post">
        <input type="hidden" name="user_id" value="<%= user.user_id %>">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" value="<%= user.user_name %>" required>
        <br>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= user.user_email %>" required>
        <br>
        <label for="phone">Phone:</label>
        <input type="number" id="phone" name="phone"  value="<%= user.user_phone %>" required>
        <br>
        <label for="fname">Fname:</label>
        <input type="text" id="fname" name="fname"  value="<%= user.user_fname %>" required>
        <br>
        <label for="lname">Lname:</label>
        <input type="text" id="lname" name="lname"  value="<%= user.user_lname %>" required>
        <br>
        <label for="city">City:</label>
        <select id="city" name="city" required>
            <option value="1" <%= user.user_city === 1 ? 'selected' : '' %>>Mumbai</option>
            <option value="2" <%= user.user_city === 2 ? 'selected' : '' %>>Delhi</option>
            <option value="3" <%= user.user_city === 3 ? 'selected' : '' %>>Bangalore</option>
            <option value="4" <%= user.user_city === 4 ? 'selected' : '' %>>Hyderabad</option>
            <option value="5" <%= user.user_city === 5 ? 'selected' : '' %>>Chennai</option>
        </select>
        <br>
        <label for="address">Address:</label>
        <input type="text" id="address" name="address"  value="<%= user.user_adress %>" required>
        <br>
        <button type="submit">Edit Profile</button>
    </form>
</body>
</html>
